//grammar
/*
E-&gt;TE&#39;
E&#39;-&gt;+TE&#39;|NULL
T-&gt;FT&#39;
T&#39;-&gt;*FT&#39;|NULL
F-&gt;(E)|a
*/
#include&lt;stdio.h&gt;
#include&lt;string.h&gt;
void E();
void T();
void F();
void Eds();
void Tds();
char input[1000];

int i,error;
int main()
{
printf(&quot;Enter the input:\n&quot;);
gets(input);
E();
if(i==strlen(input)&amp;&amp;error==0)
{
printf(&quot;String is accepted&quot;);
}
else
{
printf(&quot;string is rejected&quot;);
}
}
void E()
{
T();
Eds();
}
void T()
{
F();
Tds();
}
void Eds()
{

if(input[i]==&#39;+&#39;)
{
i++;
T();
Eds();
}

}
void Tds()
{
if(input[i]==&#39;*&#39;)
{
i++;
F();
Tds();
}
}
void F()
{
if(input[i]==&#39;a&#39;)
{
i++;
}
else if(input[i]==&#39;(&#39;)
{
i++;
E();

if(input[i]==&#39;)&#39;)
{
i++;
}
else
{
error=1;
}
}
else
{
error=1;
}
}
